<UserControl
    x:Class="DailyApp.Views.WaitUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DailyApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="微软雅黑"
    mc:Ignorable="d">
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsShowRightWait}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300" LastChildFill="False">
                    <TextBlock
                        Margin="10"
                        DockPanel.Dock="Top"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="添加待办" />
                    <StackPanel
                        Margin="10"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="状态:" />
                        <ComboBox Margin="10,2,0,0"  SelectedIndex="{Binding WaitInfoDTO.Status}">
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <TextBox
                        Margin="20"
                        md:HintAssist.Hint="请输入待办标题"
                        DockPanel.Dock="Top" 
                        Text="{Binding WaitInfoDTO.Title}"/>
                    <TextBox
                        MinHeight="100"
                        Margin="20"
                        md:HintAssist.Hint="请输入待办内容"
                        DockPanel.Dock="Top"
                        TextWrapping="Wrap" 
                        Text="{Binding WaitInfoDTO.Content}"/>

                    <Button
                        HorizontalAlignment="Center"
                        Content="添加到待办"
                        DockPanel.Dock="Top" 
                        Command="{Binding AddWaitCommand}"/>
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  第一行  -->
                <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                    <TextBox
                        Width="100"
                        VerticalAlignment="Center"
                        md:HintAssist.Hint="查找待办事项..."
                        md:TextFieldAssist.HasClearButton="True"
                        Text="{Binding SearchWaitText, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding QueryWaitCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Text="筛选" />
                    <ComboBox SelectedIndex="{Binding SearchWaitStatus}">
                        <ComboBoxItem>全部</ComboBoxItem>
                        <ComboBoxItem>待办</ComboBoxItem>
                        <ComboBoxItem>已完成</ComboBoxItem>
                    </ComboBox>
                    <Button
                        Margin="10,0,0,0"
                        Background="#63B8FF"
                        Command="{Binding QueryWaitCommand}"
                        Content="查询" />

                </StackPanel>
                <Button
                    Margin="10"
                    HorizontalAlignment="Right"
                    Background="#9932CC"
                    Command="{Binding ShowRightWaitCommand}"
                    Content="添加待办" />
                <!--  第二行  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding WaitInfoList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Border
                                        Margin="10"
                                        Background="{Binding BackColor}"
                                        CornerRadius="2">
                                        <Grid
                                            Width="220"
                                            Height="180"
                                            MaxWidth="250">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <md:PopupBox HorizontalAlignment="Right" Panel.ZIndex="1">
                                                <Button Content="删除" />
                                            </md:PopupBox>
                                            <TextBlock
                                                Margin="10,5"
                                                FontWeight="Bold"
                                                Text="{Binding Title}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="10,5"
                                                Text="{Binding Content}"
                                                TextWrapping="Wrap" />
                                            <!--  画背景  -->
                                            <Canvas Grid.RowSpan="2" ClipToBounds="True">
                                                <Border
                                                    Canvas.Top="10"
                                                    Canvas.Right="-50"
                                                    Width="120"
                                                    Height="120"
                                                    Background="#ffffff"
                                                    CornerRadius="100"
                                                    Opacity="0.3" />
                                                <Border
                                                    Canvas.Top="100"
                                                    Canvas.Right="-30"
                                                    Width="130"
                                                    Height="130"
                                                    Background="#ffffff"
                                                    CornerRadius="100"
                                                    Opacity="0.3" />
                                            </Canvas>
                                        </Grid>
                                    </Border>
                                </md:TransitioningContent>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>
