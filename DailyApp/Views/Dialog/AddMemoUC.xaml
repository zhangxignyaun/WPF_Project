<UserControl
    x:Class="DailyApp.Views.Dialog.AddMemoUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DailyApp.Views.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="400"
    Height="280"
    mc:Ignorable="d">
    <Grid Width="400" Height="280">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Padding="20,10"
            FontSize="20"
            FontWeight="Bold"
            Text="添加待办" />
        <DockPanel Grid.Row="1" LastChildFill="False">


            <TextBox
                Margin="20,0,0,0"
                md:HintAssist.Hint="请输入备忘录标题"
                DockPanel.Dock="Top"
                Text="{Binding MemoInfoDTO.Title}" />
            <TextBox
                MinHeight="100"
                Margin="20,0,0,0"
                md:HintAssist.Hint="请输入备忘录内容"
                DockPanel.Dock="Top"
                Text="{Binding MemoInfoDTO.Content}"
                TextWrapping="Wrap" />


        </DockPanel>
        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,20,0"
                HorizontalAlignment="Center"
                Command="{Binding CancelCommand}"
                Content="取消"
                DockPanel.Dock="Top"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button
                Margin="0,0,10,0"
                HorizontalAlignment="Center"
                Command="{Binding SaveCommand}"
                Content="确认"
                DockPanel.Dock="Top" />
        </StackPanel>
    </Grid>
</UserControl>
