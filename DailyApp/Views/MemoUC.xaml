<UserControl
    x:Class="DailyApp.Views.MemoUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DailyApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="微软雅黑"
    mc:Ignorable="d">
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsShowRightMemo}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300" LastChildFill="False">
                    <TextBlock
                        Margin="10"
                        DockPanel.Dock="Top"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="添加备忘录" />

                    <TextBox
                        Margin="20"
                        md:HintAssist.Hint="请输入备忘录标题"
                        DockPanel.Dock="Top"
                        Text="{Binding MemoInfoDTO.Title}" />
                    <TextBox
                        MinHeight="100"
                        Margin="20"
                        md:HintAssist.Hint="请输入备忘录内容"
                        DockPanel.Dock="Top"
                        Text="{Binding MemoInfoDTO.Content}"
                        TextWrapping="Wrap" />

                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding AddMemoCommand}"
                        Content="添加到备忘录"
                        DockPanel.Dock="Top" />
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  第一行  -->
                <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                    <TextBox
                        Width="200"
                        VerticalAlignment="Center"
                        md:HintAssist.Hint="查找备忘录事项..."
                        md:TextFieldAssist.HasClearButton="True"
                        Text="{Binding searchTitle, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding QueryMemoListCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>


                </StackPanel>
                <Button
                    Margin="10"
                    HorizontalAlignment="Right"
                    Background="#9932CC"
                    Command="{Binding ShowRightMemoCommand}"
                    Content="添加备忘录" />
                <!--  第二行  -->
                <StackPanel
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    Visibility="{Binding VisibilityMemo}">

                    <Image
                        Width="300"
                        Height="auto"
                        Source="/images/xiaomeiyan.jpg"
                        Stretch="Uniform" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="没有找到备忘录信息，您可以添加一些" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding MemoInfoList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Border
                                        Margin="10"
                                        Background="Green"
                                        CornerRadius="2">
                                        <Grid
                                            Width="220"
                                            Height="180"
                                            MaxWidth="250">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <md:PopupBox HorizontalAlignment="Right" Panel.ZIndex="1">
                                                <Button
                                                    Command="{Binding DataContext.DeleteMemoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Content="删除" />
                                            </md:PopupBox>
                                            <TextBlock
                                                Margin="10,5"
                                                FontWeight="Bold"
                                                Text="{Binding Title}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="10,5"
                                                Text="{Binding Content}"
                                                TextWrapping="Wrap" />
                                            <!--  画背景  -->
                                            <Canvas Grid.RowSpan="2" ClipToBounds="True">
                                                <Border
                                                    Canvas.Top="10"
                                                    Canvas.Right="-50"
                                                    Width="120"
                                                    Height="120"
                                                    Background="#ffffff"
                                                    CornerRadius="100"
                                                    Opacity="0.3" />
                                                <Border
                                                    Canvas.Top="100"
                                                    Canvas.Right="-30"
                                                    Width="130"
                                                    Height="130"
                                                    Background="#ffffff"
                                                    CornerRadius="100"
                                                    Opacity="0.3" />
                                            </Canvas>
                                        </Grid>
                                    </Border>
                                </md:TransitioningContent>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>
