<UserControl
    x:Class="DailyApp.Views.HomeUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DailyApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="微软雅黑"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  第一行  -->
        <TextBlock
            Grid.Row="0"
            Margin="15,10"
            FontSize="24"
            Text="{Binding LoginInfo}" />
        <!--  第二行  -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding StatisPanelList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" />
                </ItemsPanelTemplate>

            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="10"
                        Background="{Binding BackColor}"
                        CornerRadius="5"
                        Cursor="{Binding Hand}">
                        <Border.InputBindings>
                            <MouseBinding
                                Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                MouseAction="LeftClick" />
                        </Border.InputBindings>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    ShadowDepth="1"
                                                    Color="#dddddd" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <StackPanel Margin="10">
                                <md:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="10"
                                    Kind="{Binding Icon}" />
                                <TextBlock
                                    Margin="10"
                                    FontSize="25"
                                    Text="{Binding ItemName}" />
                                <TextBlock
                                    Margin="10"
                                    FontSize="40"
                                    Text="{Binding Result}" />
                            </StackPanel>
                            <!--  画背景  -->
                            <Canvas ClipToBounds="True">
                                <Border
                                    Canvas.Top="10"
                                    Canvas.Right="-50"
                                    Width="120"
                                    Height="120"
                                    Background="#ffffff"
                                    CornerRadius="100"
                                    Opacity="0.3" />
                                <Border
                                    Canvas.Top="100"
                                    Canvas.Right="-30"
                                    Width="130"
                                    Height="130"
                                    Background="#ffffff"
                                    CornerRadius="100"
                                    Opacity="0.3" />
                            </Canvas>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <!--  第三行  -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--  第一列  -->
            <Border
                Grid.Column="0"
                Margin="10,0"
                Background="#bebebebe"
                CornerRadius="5"
                Opacity="0.2" />
            <DockPanel Grid.Column="0" Margin="10,10">
                <DockPanel
                    Margin="10,5"
                    DockPanel.Dock="Top"
                    LastChildFill="False">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="待办事项" />
                    <Button
                        Width="30"
                        Height="30"
                        VerticalAlignment="Top"
                        Command="{Binding ShowAddWaitCommand}"
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingActionLightButton}">

                        <md:PackIcon Kind="Add" />
                    </Button>
                </DockPanel>
                <!--  数据列表  -->
                <ListBox
                    HorizontalContentAlignment="Stretch"
                    ItemsSource="{Binding WaitInfoList}"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding ShowEditWaitDialogCommand}" CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemTemplate>
                        <DataTemplate>

                            <DockPanel MaxHeight="80">
                                <ToggleButton
                                    Command="{Binding DataContext.ChangeWaitStatusCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    DockPanel.Dock="Right"
                                    IsChecked="{Binding Status}" />
                                <StackPanel Margin="8,0,0,0">

                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Text="{Binding Title}" />
                                    <TextBlock
                                        Margin="0,5"
                                        Opacity="0.5"
                                        Text="{Binding Content}" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>

            <!--  第二列  -->
            <Border
                Grid.Column="1"
                Margin="10,0"
                Background="#bebebebe"
                CornerRadius="5"
                Opacity="0.2" />
            <DockPanel Grid.Column="1" Margin="10,10">
                <DockPanel
                    Margin="10,5"
                    DockPanel.Dock="Top"
                    LastChildFill="False">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="备忘录" />
                    <Button
                        Width="30"
                        Height="30"
                        VerticalAlignment="Top"
                        Command="{Binding ShowAddMemoCommand}"
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingActionLightButton}">
                        <md:PackIcon Kind="Add" />
                    </Button>
                </DockPanel>
                <!--  数据列表  -->
                <ListBox
                    HorizontalContentAlignment="Stretch"
                    ItemsSource="{Binding MemoInfoList}"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel MaxHeight="80">

                                <StackPanel Margin="8,0,0,0">

                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Text="{Binding Title}" />
                                    <TextBlock
                                        Margin="0,5"
                                        Opacity="0.5"
                                        Text="{Binding Content}" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
    </Grid>

</UserControl>
